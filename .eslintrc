{
    "parser": "babel-eslint",
    "extends": ["eslint:recommended", "prettier"],
    "plugins": ["prettier"],
    "env": {
        "node": true
    },
    "globals": {
        "__dirname": true,
        "describe": true,
        "it": true,
        "module": true,
        "process": true,
        "Promise": true
    },
    "rules": {
        "prettier/prettier": "error",
        "arrow-body-style": 0,
        "default-case": 0,
        "global-require": 0,
        "no-confusing-arrow": 0,
        "no-console": 0,
        "no-constant-condition": 0,
        "no-shadow": 0,
        "no-unsafe-finally": 0,
        "no-useless-escape": 0,
        "padded-blocks": 0
    }
}
